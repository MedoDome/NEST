<% include ../partials/header  %>

    <div class="col col-xs-12">
    <a href="/ticket/new">  <button type="button" class="btn btn-primary" >NEW</button></a>
    <br />
    
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Created</th>
                    <th>Solved</th>
                    <th width="10%"> Action</th>
                </tr>
            </thead>
            <tbody>
            <% tickets.forEach(function(ticket){ %>
            <% var status; (ticket.solved)? status = "success" : status = "danger";  %>
                <tr>
                    <th scope="row"><%= ticket.title %></th>
                    <td><%= ticket.created %></td>
                    <td><span class="label label-<%= status %>"><%= ticket.solved %></span></td>
                    <td>
                    
                    <a href="/ticket/<%= ticket._id %>"> <button><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></button></a>
                    <a href="/ticket/<%= ticket._id %>/edit"><button><span class="glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span></button></a>
                        <form action="/ticket/<%= ticket._id %>?_method=DELETE" method="POST" style="display:inline"> <button type="submit" ><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>  </form>
                    </td>
                </tr>
                <% });  %>
            </tbody>
        </table>
    </div>
   
    <% include ../partials/footer  %>